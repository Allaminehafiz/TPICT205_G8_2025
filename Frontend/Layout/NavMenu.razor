<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Délibération</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#registerModal">
                        <i class="fas fa-user-plus"></i> Inscription
                    </button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-success me-2" data-bs-toggle="modal" data-bs-target="#loginModal">
                        <i class="fas fa-sign-in-alt"></i> Connexion
                    </button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-secondary" @onclick="ToggleLanguage">
                        <i class="fas fa-globe"></i> @currentLanguage
                    </button>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private string currentLanguage = "FR";
    private void ToggleLanguage()
    {
        currentLanguage = currentLanguage == "FR" ? "EN" : "FR";
    }
}
